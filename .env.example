# Flash Loan Agent Environment Configuration
# Copy this file to .env and update with your actual values

# Google AI API Key (required for Gemini model)
GOOGLE_API_KEY=your_google_api_key_here

# MongoDB Configuration
MONGO_CONNECTION_STRING=mongodb://admin:password123@mongo:27017/flash_loan_agent?authSource=admin
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=password123

# MongoDB Express (optional web UI for database management)
MONGO_EXPRESS_USERNAME=admin
MONGO_EXPRESS_PASSWORD=pass

# Application Configuration (optional - defaults are provided)
HOST=0.0.0.0
PORT=8000

# Development/Production Environment
ENV=development
